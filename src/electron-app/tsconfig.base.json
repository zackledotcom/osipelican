{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "composite": true
  },
  "exclude": ["node_modules", "dist"]
} 